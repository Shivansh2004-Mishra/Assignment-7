<%- include('partials/header') %>
<div class="box">
    <% for(var i=0 ; i< ejes.length ; i++){ %>
        <div class="item">
            <span class="priority-<%= ejes[i].priority %>">
                <%= ejes[i].priority.charAt(0).toUpperCase() + ejes[i].priority.slice(1) %>
            </span>
            <span class="task-name">
                <%= ejes[i].description || ejes[i].name %>
            </span>
            <!-- Edit and Delete buttons -->
            <form action="/edit/<%= ejes[i].id %>" method="get" style="display:inline;">
                <button type="submit" class="action-btn"><i class="fa fa-pen"></i></button>
            </form>
            <form action="/delete/<%= ejes[i].id %>" method="post" style="display:inline;">
                <button type="submit" class="action-btn"><i class="fa fa-trash"></i></button>
            </form>
        </div>
    <% } %>
    <form action="/" method="POST" onsubmit="return validateForm()">
        <input type="text" name="ele1" id="ele1" placeholder="Enter the task">
        <select name="priority" id="priority">
            <option value="high">High</option>
            <option value="medium">Medium</option>
            <option value="low">Low</option>
        </select>
        <button type="submit">+</button>
    </form>
</div>
<script>
function validateForm() {
    var x = document.getElementById("ele1").value;
    if (x.trim() === "") {
        alert("Task cannot be empty!");
        return false;
    }
    return true;
}
</script>
<%- include('partials/footer') %>